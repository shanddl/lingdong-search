.effects-panel-overlay {
    position: fixed;
    inset: 0;
    background: transparent;
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: none;
}

.effects-panel-overlay.visible {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
}
