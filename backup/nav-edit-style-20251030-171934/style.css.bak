    grid-template-columns: repeat(2, 1fr);
    gap: 6px;
    margin-bottom: 10px;
}

.effects-wallpaper-option {
    aspect-ratio: 16/9;
    border-radius: 8px;
    border: 2px solid rgba(138, 180, 248, 0.2);
    background-size: cover;
    background-position: center;
    cursor: pointer;
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
}

.effects-wallpaper-option::after {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.3);
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

.effects-wallpaper-option:hover {
    transform: scale(1.03);
    border-color: var(--blue);
}

.effects-wallpaper-option:hover::after {
    background: rgba(0, 0, 0, 0.1);
}

.effects-wallpaper-option.active {
    border-color: var(--blue);
    box-shadow: 0 0 0 2px rgba(138, 180, 248, 0.3);
}

.effects-wallpaper-option.active::after {
    background: rgba(138, 180, 248, 0.2);
}

