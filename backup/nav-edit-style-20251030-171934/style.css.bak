/* ==================
 * 统一设置侧边面板（Tab分类）
 * ================== */
.effects-settings-panel {
    position: fixed;
    top: 0;
    right: 0;
    width: 340px;
    min-width: 280px;
    max-width: 600px;
    height: 100vh;
    background: rgba(255, 255, 255, 0.25);
    backdrop-filter: blur(40px) saturate(180%);
    -webkit-backdrop-filter: blur(40px) saturate(180%);
    border: none;
    border-left: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 0;
    box-shadow: -8px 0 32px rgba(0, 0, 0, 0.3);
    z-index: 1001;
    overflow: hidden;
    /* 防止页面加载时闪现 - display:none是最终保险 */
    /* HTML中已添加内联 display:none, 此处保持flex以便JS移除时正常显示 */
    display: flex;
    flex-direction: column;
    transform: translateX(100%);
    pointer-events: none;
}

/* 面板准备好后启用动画（但仍在屏幕外） */
.effects-settings-panel.ready {
    display: flex !important; /* 覆盖HTML中的display:none */
    transition: transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 拖动手柄 */
.effects-panel-resize-handle {
    position: absolute;
    top: 0;
    left: 0;
    width: 8px;
    height: 100%;
    cursor: ew-resize;
    z-index: 10;
    transition: background-color 0.2s ease;
}

.effects-panel-resize-handle::before {
    content: '';
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 3px;
    height: 60px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 2px;
    transition: all 0.2s ease;
}

.effects-panel-resize-handle:hover::before {
    background: rgba(138, 180, 248, 0.6);
    height: 80px;
    width: 4px;
    box-shadow: 0 0 8px rgba(138, 180, 248, 0.4);
}

.effects-panel-resize-handle:active::before {
    background: rgba(138, 180, 248, 0.9);
    box-shadow: 0 0 12px rgba(138, 180, 248, 0.6);
}

/* 拖动时的样式 */
.effects-settings-panel.resizing {
    transition: none !important;
    user-select: none;
}

body.panel-resizing {
    cursor: ew-resize !important;
    user-select: none !important;
}

body.panel-resizing * {
    cursor: ew-resize !important;
    user-select: none !important;
}

/* Tab栏样式 */
.effects-panel-tabs {
    display: flex;
    align-items: center;
    padding: 8px 8px 0;
    gap: 4px;
    background: rgba(255, 255, 255, 0.03);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    flex-shrink: 0;
}

.effects-tab {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 4px;
    padding: 10px 8px;
    background: transparent;
    border: none;
    border-radius: 10px 10px 0 0;
    color: rgba(255, 255, 255, 0.5);
    cursor: pointer;
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    font-size: 10px;
    font-weight: 500;
    letter-spacing: 0.5px;
    position: relative;
}

.effects-tab svg {
    width: 20px;
    height: 20px;
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

.effects-tab:hover {
    background: rgba(255, 255, 255, 0.05);
    color: rgba(255, 255, 255, 0.75);
}

.effects-tab:hover svg {
    transform: scale(1.1);
}

.effects-tab.active {
    background: rgba(138, 180, 248, 0.15);
    color: #8ab4f8;
    font-weight: 600;
}

.effects-tab.active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 70%;
    height: 2px;
    background: linear-gradient(90deg, transparent, #8ab4f8, transparent);
    border-radius: 2px 2px 0 0;
}

.effects-tab.active svg {
    transform: scale(1.1);
    filter: drop-shadow(0 2px 4px rgba(138, 180, 248, 0.3));
}

/* Tab内容容器 */
.effects-tabs-container {
    position: relative;
    flex: 1;
    overflow: hidden;
}

.effects-tab-content {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    opacity: 0;
    visibility: hidden;
    transform: translateX(30px);
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: none;
    display: flex;
    flex-direction: column;
}

.effects-tab-content.active {
    opacity: 1;
    visibility: visible;
    transform: translateX(0);
    pointer-events: auto;
}

/* Tab占位符样式 */
.effects-placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    text-align: center;
    padding: 40px;
}

/* 系统设置样式 */
.effects-system-section {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.effects-system-hint {
    font-size: 11px;
