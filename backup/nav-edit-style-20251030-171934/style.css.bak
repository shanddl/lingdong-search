    background: rgba(255, 255, 255, 0.05);

    border: 1px solid rgba(255, 255, 255, 0.08);
    gap: 12px; /* 图标与文字间距略增 */
    transition: transform 0.45s var(--rebound-easing), box-shadow 0.35s ease, background-color 0.25s ease;
    will-change: transform;
    overflow: hidden; /* 防止文本溢出打乱布局 */
}
