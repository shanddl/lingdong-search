:root {
    --blue: #8ab4f8;
    --green: #81c995;
    --red: #f28b82;
    --bg: #17181a;
    --card-bg: #202124;
    --text-primary: #e8eaed;
    --text-secondary: #bdc1c6;
    --border-color: #3c4043;
    --shadow-color: rgba(0, 0, 0, 0.2);
    --hover-shadow-color: rgba(0, 0, 0, 0.35);
    --ios-glass-bg: rgba(45, 45, 45, 0.7);
    --rebound-easing: cubic-bezier(0.34, 1.56, 0.64, 1);
    --scope-menu-width: 800px;
    --text-shadow: 0 1px 3px rgba(0,0,0,0.3);
    --input-bg: rgba(255, 255, 255, 0.08);

    /* --- 壁纸背景适配变量 --- */
    --overlay-opacity: 0.3;
    --search-bg-opacity: 0.15;
    --search-blur: 30px;
    --search-border-opacity: 0.35;
    --icon-bg-opacity: 0.13;
    --icon-blur: 15px;
    --text-shadow-opacity: 0.8;
    
    /* --- 搜索框动态颜色变量 --- */
    --search-text-color: rgba(50, 50, 60, 0.9);
    --search-btn-color: rgba(60, 60, 70, 0.8);
    --search-clock-color: #C89B5C;

    /* --- Navigation Customization Variables Start --- */
    --nav-item-size: 80px;
    --nav-grid-gap: 24px;
    /* --- Dock栏缩放变量 --- */
    --dock-scale: 1;
    /* --- Navigation Customization Variables End --- */
    
    /* --- 效果调节器动态变量（已移除） --- */
}

@keyframes slideOutLeft {
    from { transform: translateX(0); opacity: 1; }
    to { transform: translateX(-50px); opacity: 0; }
}
@keyframes slideInRight {
    from { transform: translateX(50px); opacity: 0; }
    to { transform: translateX(0); opacity: 1; }
}
.nav-item.slide-out { animation: slideOutLeft 0.25s ease-out forwards; }
.nav-item.slide-in { animation: slideInRight 0.25s ease-out forwards; }

/* === 增强版页面加载动画 - 俏皮、连贯、顺滑 === */
/* 注意：动画效果现在完全由 JS (pageLoadAnimation.js) 控制，无需 CSS 关键帧 */


/* 为各组件添加硬件加速和优化 */
.header-container,
#navigation-tabs-container,
.wallpaper-library-btn,
#active-scope-pills-container {
    will-change: transform, opacity;
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
}

/* 导航项不使用will-change，避免数据更新时的抖动 */
.nav-item {
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
}

/* 数据更新时禁用所有导航项动画和过渡 */
body[data-updating="true"] .nav-item,
body[data-updating="true"] .nav-item * {
    transition: none !important;
    animation: none !important;
    transform: none !important;
}

* { box-sizing: border-box; margin: 0; padding: 0; }
html {
    height: 100%; 
    width: 100%;
    overflow-x: hidden; /* 隐藏横向滚动条 */
    overflow-y: auto; /* 允许纵向滚动，确保fixed元素正常显示 */
}
body {
    width: 100%;
    min-height: 100vh; /* 改为min-height，确保内容可以超出视口 */
    font-family: "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    -webkit-font-smoothing: antialiased; -moz-osx-font-smoothing: grayscale;
    background: var(--bg); color: var(--text-primary);
    transition: background-color 0.3s ease, padding-top 0.3s ease;
    display: flex; flex-direction: column; justify-content: flex-start; align-items: center;
    padding-top: 1vh;
    padding-bottom: 120px; /* 为dock栏留出空间 */
    overflow: visible; /* 允许下拉菜单超出显示 */
    box-sizing: border-box; /* 确保padding不会导致溢出 */
}
body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    /* 默认背景渐变（如果localStorage无壁纸数据则显示） */
    background: linear-gradient(135deg, #1e3c72 0%, #2a5298 50%, #7e22ce 100%);
    background-attachment: fixed;
}

/* 全局暗色遮罩层 - 增强壁纸背景上的元素可见性 */
body::after {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    background: rgba(0, 0, 0, var(--overlay-opacity));
    pointer-events: none;
}

main {
    width: 100%; 
    max-width: 1500px; /* Wider container for better pill arrangement */
    padding: 20px 20px 10px 20px; /* 减少底部padding */
    position: relative;
    z-index: 1; /* 确保内容在全局遮罩层之上 */
    display: flex; flex-direction: column; align-items: center;
    transition: max-width 0.3s ease;
    overflow: visible; /* 允许下拉菜单超出显示 */
    flex: 1; /* 占据剩余空间 */
}


#active-scope-pills-container {
    width: 100%; display: flex; flex-wrap: wrap; gap: 8px;
    margin-bottom: clamp(2px, 0.5vh, 4px); min-height: 28px; align-items: center;
    /* [修复] 初始隐藏，由JS动画控制显示 */
    opacity: 0;
}
.scope-pills-label { font-size: 13px; color: var(--text-secondary); margin-right: 4px; }
.search-pill {
    display: flex; align-items: center; background-color: rgba(138, 180, 248, 0.2);
    color: var(--blue); border-radius: 16px; padding: 4px 10px; font-size: 13px;
    white-space: nowrap;
    animation: pill-fade-in 0.3s var(--rebound-easing);
}
.pill-close-btn { background: none; border: none; color: var(--blue); cursor: pointer; margin-left: 6px; padding: 0; font-size: 16px; line-height: 1; opacity: 0.7; }
.pill-close-btn:hover { opacity: 1; }

@keyframes pill-fade-in { from { opacity: 0; transform: scale(0.8); } to { opacity: 1; transform: scale(1); } }

.header-container { 
    width: 100%; 
    position: relative; 
    margin-bottom: 0;
    
    /* 搜索框由 JS 动画控制，不需要 CSS 动画 */
    /* [修复] 初始隐藏，避免刷新时白闪 */
    opacity: 0;
    
    /* [修复] 设置高层级，确保搜索相关元素（搜索建议、AI搜索）在导航图标之上 */
    z-index: 100;
}
#search-form-wrapper {
    width: 100%; 
    padding: 6px; 
    background: rgba(255, 255, 255, var(--search-bg-opacity));
    backdrop-filter: blur(var(--search-blur)) brightness(1.1);
    -webkit-backdrop-filter: blur(var(--search-blur)) brightness(1.1);
    border: 1px solid rgba(255, 255, 255, var(--search-border-opacity));
    border-radius: 26px; 
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1), 0 2px 8px rgba(0, 0, 0, 0.08); 
    transition: all 0.3s ease;
}
#search-form-wrapper:hover, #search-form-wrapper.focused { box-shadow: 0 6px 20px var(--hover-shadow-color); }

.header-content { display: flex; align-items: center; width: 100%; }
.header-group-left { display: flex; align-items: center; gap: 8px; flex-shrink: 0; }
.header-btn {
    display: inline-flex; align-items: center; justify-content: center;
    background: transparent; border: none; 
    color: var(--search-btn-color);
    height: 40px; border-radius: 20px; cursor: pointer;
    font-size: 14px; white-space: nowrap; transition: all 0.2s ease;
    flex-shrink: 0; padding: 0;
}

#search-form-wrapper .header-btn:hover {
    color: var(--search-btn-color);
    opacity: 1;
    background: rgba(0, 0, 0, 0.05);
}
.header-btn:hover { background: rgba(255, 255, 255, 0.15); }
.engine-btn-container { position: relative; }
#engine-btn { padding: 0 12px; }
#active-engine-name { font-size: 14px; font-weight: 500; color: var(--text-secondary); }
#engine-btn:hover #active-engine-name { color: var(--text-primary); }

#search-container {
    position: relative; display: flex; align-items: center;
    flex-grow: 1; min-width: 0; margin: 0 8px;
}
#search-form { display: flex; align-items: center; width: 100%; position: relative; }
#search-input-container {
    display: flex; align-items: center; gap: 4px;
    width: 100%; height: 40px; padding: 0 45px 0 40px; cursor: text;
}
#real-search-input {
    flex-grow: 1; border: none; background: transparent; 
    color: var(--search-text-color);
    font-size: 14px; outline: none; min-width: 100px; height: 100%;
}

#real-search-input::placeholder {
    color: var(--search-text-color);
    opacity: 0.5;
}
#search-scope-btn, #search-submit-btn {
    position: absolute; top: 50%; transform: translateY(-50%); z-index: 2;
}
#search-scope-btn {
    left: 6px;
    width: 28px; height: 28px; border-radius: 50%; color: var(--text-secondary); opacity: 0.7;
    transition: background-color 0.2s ease;
}
#search-scope-btn svg { width: 16px; height: 16px; fill: currentColor; }
#search-submit-btn { right: 0; width: 40px; color: var(--text-secondary); }
#search-submit-btn:hover { color: var(--blue); }
#search-submit-btn svg { width: 18px; height: 18px; }
#search-clock {
    position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);
    color: var(--search-clock-color); font-size: 16px; font-weight: 500; pointer-events: none;
    transition: opacity 0.2s ease; text-align: center; white-space: nowrap; z-index: 1;
}
#search-clock .day { font-size: 12px; color: var(--search-text-color); opacity: 0.7; }

#search-container.has-content #search-clock,
#search-form-wrapper.focused #search-clock {
    opacity: 0;
}

.dropdown-menu {
    position: absolute; top: calc(100% + 14px);
    background: var(--ios-glass-bg); 
    backdrop-filter: blur(20px) saturate(180%);
    border-radius: 16px; border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 8px 24px rgba(0,0,0,0.2); padding: 8px; z-index: 9999;
    display: flex; flex-direction: column;
    opacity: 0;
    visibility: hidden;
    transform: scale(0.98) translateY(-10px);
    transition: opacity 0.25s ease, transform 0.25s var(--rebound-easing), visibility 0.25s;
    will-change: opacity, transform;
}
/* 右键菜单需要固定定位在视口中 */
#main-context-menu,
#nav-context-menu,
#nav-tab-context-menu {
    position: fixed;
    z-index: 10000; /* 确保在最顶层 */
    background: rgba(20, 20, 20, 0.6) !important;
    backdrop-filter: blur(60px) saturate(200%) brightness(1.15) !important;
    -webkit-backdrop-filter: blur(60px) saturate(200%) brightness(1.15) !important;
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.5), 0 0 0 1px rgba(255, 255, 255, 0.1) inset !important;
    min-width: 100px !important;
    max-width: 120px !important;
    width: max-content !important;
    border: 1px solid rgba(255, 255, 255, 0.15) !important;
    border-radius: 14px !important;
    padding: 6px !important;
}
.dropdown-menu.visible {
    visibility: visible;
    opacity: 1;
    transform: scale(1) translateY(0);
    transition: opacity 0.2s ease, transform 0.2s cubic-bezier(0.34, 1.56, 0.64, 1), visibility 0s;
}

/* 确保右键菜单的visible状态正常工作 */
#main-context-menu.visible,
#nav-context-menu.visible,
#nav-tab-context-menu.visible {
    visibility: visible !important;
    opacity: 1 !important;
    transform: scale(1) translateY(0) !important;
    pointer-events: auto !important;
}

/* 右键菜单样式优化 */
#main-context-menu,
#nav-context-menu,
#nav-tab-context-menu {
    min-width: 100px !important;
    background: rgba(20, 20, 20, 0.6) !important;
    backdrop-filter: blur(60px) saturate(200%) brightness(1.15) !important;
    -webkit-backdrop-filter: blur(60px) saturate(200%) brightness(1.15) !important;
    border: 1px solid rgba(255, 255, 255, 0.15) !important;
    border-radius: 14px !important;
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.5), 0 0 0 1px rgba(255, 255, 255, 0.1) inset !important;
    padding: 6px !important;
    pointer-events: none;
    z-index: 10000;
}
.is-dynamic-menu {
    position: fixed;
    z-index: 1000;
    background: var(--ios-glass-bg);
    backdrop-filter: blur(20px) saturate(180%);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
}
.is-dynamic-menu.opens-up {
    transform-origin: bottom;
    transform: scale(0.98) translateY(10px);
}
.is-dynamic-menu.opens-up.visible {
     transform: scale(1) translateY(0);
}

/* 动态菜单滚动区域 - 横向网格布局 */
.dropdown-scrollable-area {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    max-height: 300px;
    overflow-y: auto;
    max-width: 500px;
    padding: 4px;
}
.dropdown-scrollable-area::-webkit-scrollbar:vertical { 
    width: 6px; 
    display: block;
}
.dropdown-scrollable-area::-webkit-scrollbar-track:vertical { 
    background: rgba(255, 255, 255, 0.05);
    border-radius: 3px;
}
.dropdown-scrollable-area::-webkit-scrollbar-thumb:vertical { 
    background-color: rgba(255, 255, 255, 0.2);
    border-radius: 3px;
}
.dropdown-scrollable-area::-webkit-scrollbar-thumb:vertical:hover { 
    background-color: rgba(255, 255, 255, 0.3);
}

/* 动态菜单管理区域 */
.dropdown-management-area {
    background: transparent;
}

/* 管理区域分隔符 */
.management-divider {
    margin: 4px 0;
}

.dropdown-item { 
    display: flex; 
    align-items: center; 
    justify-content: flex-start;
    padding: 6px 12px; 
    color: rgba(255, 255, 255, 0.95); 
    text-decoration: none; 
    border-radius: 8px; 
    font-size: 13px; 
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1); 
    white-space: nowrap; 
    cursor: pointer; 
    height: 36px;
    font-weight: 500;
    text-align: left;
    /* 确保button元素样式正确，避免显示URL */
    background: none;
    border: none;
    width: 100%;
}

/* 时间下拉菜单专用样式 - 横向布局，每行约5个 */
.dropdown-scrollable-area .dropdown-item {
    padding: 8px 12px;
    border-radius: 12px;
    min-height: 36px;
    height: auto;
    flex: 0 0 calc((100% - 32px) / 5);
    min-width: calc((100% - 32px) / 5);
    border: 1px solid rgba(255, 255, 255, 0.08);
    background: rgba(255, 255, 255, 0.05);
    justify-content: center;
    text-align: center;
}
.dropdown-item-favicon { 
    display: none; /* 隐藏图标 */
}
.dropdown-item:hover, .dropdown-item.active { 
    background-color: rgba(255, 255, 255, 0.15); 
    transform: scale(1.02);
}
.dropdown-item:active {
    background-color: rgba(255, 255, 255, 0.2);
    transform: scale(0.98);
}

/* 时间下拉菜单悬停效果 */
.dropdown-scrollable-area .dropdown-item:hover,
.dropdown-scrollable-area .dropdown-item.active {
    background-color: rgba(255, 255, 255, 0.12);
    border-color: rgba(255, 255, 255, 0.15);
    transform: translateY(-1px);
}

.dropdown-scrollable-area .dropdown-item:active {
    background-color: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.2);
    transform: translateY(0);
}

.context-menu-divider { 
    height: 1px; 
    background: rgba(255, 255, 255, 0.1); 
    margin: 6px 8px; 
    border-radius: 1px;
}

#search-engine-menu { left: 0; transform-origin: top left; min-width: 180px; z-index: 9999; /* 确保覆盖dock栏 */ }
.scrollable-engine-list {
    max-height: 264px;
    overflow-y: auto;
    padding-right: 4px;
}

#search-scope-menu {
    left: 0; transform-origin: top left; 
    width: var(--scope-menu-width);
    z-index: 9999; /* 确保覆盖dock栏 */
}
#search-suggestions-container {
    left: 0; right: auto;
    width: 45%; transform-origin: top left;
    transition: left 0.3s cubic-bezier(0.25, 0.1, 0.25, 1), width 0.3s cubic-bezier(0.25, 0.1, 0.25, 1);
    z-index: 9999; /* 确保覆盖dock栏 */
}
body.scope-menu-open #search-suggestions-container.visible {
    left: calc(var(--scope-menu-width) + 12px);
    width: calc(100% - var(--scope-menu-width) - 12px);
    min-width: 250px;
}
body:not(.scope-menu-open) #search-suggestions-container.visible {
    left: 0;
    width: 100%;
}

#suggestion-tabs { display: flex; justify-content: space-between; align-items: center; padding: 4px 4px 0; border-bottom: 1px solid var(--border-color); flex-shrink: 0; }
.suggestion-tab { border: none; background: transparent; color: var(--text-secondary); padding: 6px 12px; border-radius: 10px 10px 0 0; font-size: 13px; cursor: pointer; transition: all 0.2s ease; }
.suggestion-tab:hover { background: rgba(255,255,255,0.05); color: var(--text-primary); }
.suggestion-tab.active { color: var(--blue); border-bottom: 2px solid var(--blue); }
#clear-history-btn {
    border: none; background: transparent; color: var(--text-secondary);
    padding: 6px 12px; border-radius: 10px; font-size: 13px;
    cursor: pointer; transition: all 0.2s ease;
}
#clear-history-btn:hover { background: rgba(255,255,255,0.05); color: var(--text-primary); }
#suggestion-content { 
    padding-right: 4px;
    max-height: 440px; /* 与JS中的minHeight保持一致 (10 * 44px) */
    overflow-y: auto;
    overflow-x: hidden;
}

/* 搜索建议滚动条样式 */
#suggestion-content::-webkit-scrollbar {
    width: 6px;
}

#suggestion-content::-webkit-scrollbar-track {
    background: transparent;
}

#suggestion-content::-webkit-scrollbar-thumb {
    background-color: rgba(255, 255, 255, 0.2);
    border-radius: 10px;
}

#suggestion-content::-webkit-scrollbar-thumb:hover {
    background-color: var(--blue);
}
/* 搜索建议/历史项样式 - 胶囊形 */
.suggestion-item { 
    display: flex; 
    justify-content: space-between; 
    align-items: center; 
    gap: 12px; /* 增加文本和按钮之间的间距 */
    /* 关键修复：禁用整个容器的点击，只允许子元素接收点击 */
    pointer-events: none;
}

#suggestion-content .dropdown-item.suggestion-item {
    border-radius: 16px !important;
    padding: 8px 14px;
}

/* 历史项文本容器，防止文本挤压按钮 */
.suggestion-item .suggestion-text {
    flex: 1;
    min-width: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    /* 恢复文本部分的点击事件，使其可以触发搜索 */
    pointer-events: auto;
    cursor: pointer;
}

/* 删除历史按钮样式 - 超大点击区域，提升精准度 */
.suggestion-item .remove-history-btn { 
    /* 使用 opacity 而不是 display，让按钮始终存在但不可见 */
    display: inline-flex;
    opacity: 0.1; /* 稍微可见，方便用户定位 */
    background: none; 
    border: none; 
    color: var(--text-secondary); 
    cursor: pointer; 
    /* 显著增大padding来扩大点击区域 */
    padding: 10px 12px; 
    border-radius: 8px; 
    line-height: 1; 
    font-size: 18px; /* 增大字体 */
    font-weight: bold; /* 加粗使其更明显 */
    flex-shrink: 0; /* 防止按钮被压缩 */
    /* 确保垂直居中 */
    align-items: center;
    justify-content: center;
    min-width: 36px; /* 增大最小宽度 */
    min-height: 36px; /* 增大最小高度 */
    transition: all 0.15s ease; /* 加快过渡速度 */
    /* 确保按钮在最上层，可以捕获点击事件 */
    position: relative;
    z-index: 10;
    pointer-events: auto; /* 确保可以接收点击事件 */
    margin: -4px -6px -4px 0; /* 负边距扩大可点击区域，不影响布局 */
}

/* 使用伪元素进一步扩大点击区域 */
.suggestion-item .remove-history-btn::before {
    content: '';
    position: absolute;
    top: -6px;
    right: -6px;
    bottom: -6px;
    left: -6px;
    /* 调试用（可选）：取消注释查看实际点击区域 */
    /* background: rgba(255, 0, 0, 0.1); */
}

.suggestion-item:hover .remove-history-btn { 
    opacity: 0.7; /* 悬停时半透明显示 */
}
.suggestion-item .remove-history-btn:hover { 
    opacity: 1 !important; /* 直接悬停时完全显示 */
    background-color: rgba(255, 255, 255, 0.25); 
    color: var(--text-primary);
    transform: scale(1.1); /* 增大放大效果 */
}

/* 书签项样式 - 优化布局 */
.bookmark-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
    /* 书签项保留点击事件，因为没有删除按钮 */
    pointer-events: auto;
}

.bookmark-left {
    display: flex;
    align-items: center;
    gap: 8px;
    flex: 1;
    min-width: 0;
    overflow: hidden;
}

.bookmark-title {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: var(--text-primary);
    font-size: 14px;
}

.bookmark-path {
    font-size: 12px;
    color: var(--text-secondary);
    white-space: nowrap;
    flex-shrink: 0;
    margin-left: 12px;
    opacity: 0.7;
}

.bookmark-item:hover .bookmark-path {
    opacity: 1;
}

#search-scope-menu .menu-header, #search-scope-menu .menu-footer { padding: 8px; flex-shrink: 0; }
#favorites-bar { display: flex; flex-wrap: wrap; gap: 8px; border-bottom: 1px solid var(--border-color); min-height: 52px; align-items: center; }
