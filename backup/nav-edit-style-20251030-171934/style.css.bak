}

.nav-item:active .nav-item-icon-wrapper { transform: scale(0.95); transition-duration: 0.1s; }

.nav-item {
    flex-direction: column; justify-content: center; 
    padding: 8px;
    border-radius: 24px; height: auto; width: auto;
}
.nav-item-icon-wrapper {
    width: calc(var(--nav-item-size) * 0.75);
    height: calc(var(--nav-item-size) * 0.75);
    border-radius: 22px;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 6px;
    background: rgba(255, 255, 255, var(--icon-bg-opacity));
    backdrop-filter: blur(var(--icon-blur));
    -webkit-backdrop-filter: blur(var(--icon-blur));
    border: 1px solid rgba(255, 255, 255, 0.25);
    transition: transform 0.3s var(--rebound-easing), box-shadow 0.3s ease;
    flex-shrink: 0;
    pointer-events: none;
}
