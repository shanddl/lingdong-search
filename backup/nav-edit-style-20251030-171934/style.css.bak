.effects-settings-panel {
    position: fixed;
    top: 0;
    right: 0;
    width: 340px;
    min-width: 280px;
    max-width: 600px;
    height: 100vh;
    background: rgba(255, 255, 255, 0.25);
    backdrop-filter: blur(40px) saturate(180%);
    -webkit-backdrop-filter: blur(40px) saturate(180%);
    border: none;
    border-left: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 0;
    box-shadow: -8px 0 32px rgba(0, 0, 0, 0.3);
    z-index: 1001;
    overflow: hidden;
    /* é˜²æ­¢é¡µé¢åŠ è½½æ—¶é—ªç° - display:noneæ˜¯æœ€ç»ˆä¿é™© */
    /* HTMLä¸­å·²æ·»åŠ å†…è” display:none, æ­¤å¤„ä¿æŒflexä»¥ä¾¿JSç§»é™¤æ—¶æ­£å¸¸æ˜¾ç¤º */
    display: flex;
    flex-direction: column;
    transform: translateX(100%);
    pointer-events: none;
}

/* é¢æ¿å‡†å¤‡å¥½åå¯ç”¨åŠ¨ç”»ï¼ˆä½†ä»åœ¨å±å¹•å¤–ï¼‰ */
.effects-settings-panel.ready {
    display: flex !important; /* è¦†ç›–HTMLä¸­çš„display:none */
    transition: transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

/* æ‹–åŠ¨æ‰‹æŸ„ */
.effects-panel-resize-handle {
    position: absolute;
    top: 0;
    left: 0;
    width: 8px;
    height: 100%;
    cursor: ew-resize;
    z-index: 10;
    transition: background-color 0.2s ease;
}

.effects-panel-resize-handle::before {
    content: '';
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 3px;
    height: 60px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 2px;
    transition: all 0.2s ease;
}

.effects-panel-resize-handle:hover::before {
    background: rgba(138, 180, 248, 0.6);
    height: 80px;
    width: 4px;
    box-shadow: 0 0 8px rgba(138, 180, 248, 0.4);
}

.effects-panel-resize-handle:active::before {
    background: rgba(138, 180, 248, 0.9);
    box-shadow: 0 0 12px rgba(138, 180, 248, 0.6);
}

/* æ‹–åŠ¨æ—¶çš„æ ·å¼ */
.effects-settings-panel.resizing {
    transition: none !important;
    user-select: none;
}

body.panel-resizing {
    cursor: ew-resize !important;
    user-select: none !important;
}

body.panel-resizing * {
    cursor: ew-resize !important;
    user-select: none !important;
}

